                    -open Tezos_protocol_compiler
                    -open Tezos_storage
                    -open Tezos_rpc_http
                    -open Tezos_p2p_services
                    -open Tezos_node_services))))

(alias
 ((name runtest_indent)
  (deps ((glob_files *.ml) (glob_files *.mli)))
  (action (run bash ${libexec:tezos-stdlib:test-ocp-indent.sh} ${^}))))
