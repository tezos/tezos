(jbuild_version 1)

(library
 ((name tezos_stdlib)
  (public_name tezos-stdlib)
  (libraries (ocplib-endian.bigstring
              cstruct
              stringext
              hex
              lwt
              lwt.log))
  (flags (:standard -safe-string))))

(alias
 ((name runtest_indent)
  (deps ((glob_files *.ml*)))
  (action (run bash ${path:test-ocp-indent.sh} ${^}))))

(install
 ((section libexec)
  (files ((test-ocp-indent.sh as test-ocp-indent.sh)))))
