(library
 (name tezos_stdlib)
 (public_name tezos-stdlib)
 (libraries ocplib-endian.bigstring
            bigstring
            cstruct
            hex
            re
            zarith
            lwt
            lwt_log)
 (flags (:standard -safe-string)))

(alias
 (name runtest_indent)
 (deps (glob_files *.ml{,i}))
 (action (run bash %{dep:test-ocp-indent.sh} %{deps})))

(install
 (section libexec)
 (files (test-ocp-indent.sh as test-ocp-indent.sh)))
