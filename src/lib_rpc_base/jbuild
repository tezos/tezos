(jbuild_version 1)

(library
 ((name tezos_rpc_base)
  (public_name tezos-rpc-base)
  (libraries (tezos-data-encoding
              ocplib-resto))
  (flags (:standard -w -9+27-30-32-40@8
                    -safe-string
                    -open Tezos_data_encoding))))

(alias
 ((name runtest_indent)
  (deps ((glob_files *.ml) (glob_files *.mli)))
  (action (run bash ${libexec:tezos-stdlib:test-ocp-indent.sh} ${^}))))
